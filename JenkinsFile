pipeline {
    agent any

    stages {
        stage('code checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/Nyamatulla/Flask-Blog_app.git'
            }
        }
        stage('SonarQube Analysis') {
         def scannerHome = tool 'SonarScanner';
          withSonarQubeEnv() {
              bat "${scannerHome}/bin/sonar-scanner"
                    }
                }
          }

        
    }
